<%if current_user != nil && current_user.admin?%>
		<article class="products">
			<h2>Listing posting</h2>
		</article>
			
			<table>
			  <tr>
			    <th>Name</th>
			    <th>Description</th>
			    <th>Category</th>
			    <th>Accepted</th>
			    <th></th>
			    <th></th>
			    <th></th>
			  </tr>
			
			<% @postingsAll.each do |posting| %>
			  <tr>
			    <td><%= posting.name %></td>
			    <td><%= posting.description %></td>
			    <td><%= posting.category %></td>
			    <td><%= posting.accepted %></td>
			    <td><%= link_to 'Show', posting %></td>
			    <td><%= link_to 'Edit', edit_posting_path(posting) %></td>
			    <td><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			  </tr>
			<% end %>
			</table>			
			<br />	
<%else%>
	<article class="products">
						<header>
							<h2>Recently Added Posts</h2>
						</header>
							
		<section id="featured">
					<%i = 0%>		
					<%@postings.each do |post|%>
						<%++i%>
						<ul class="column">
							
						    <!--eqblock-->
						    <li>	
						        <section class="outerblock">
						        	<div class="innerblock">
											<a href="#"><%=image_tag "FusionLogo.jpg"%></a> 
												<p>
												<b><%=link_to post.name, posting_path(post.id)%></b>
												<br />
												</p> 
									</div>
						        </section>
						    </li>
						    <%if i == postings_per_row%>
								</br>	
								<i = 0>
							<%end%>		    
						</ul>
					<%end%>
		</section>
	</article>
<%end%>
